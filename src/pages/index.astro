---
import Layout from "../layouts/Layout.astro";
import ItemGallery from "../components/ItemGallery";
import { Sparkles } from "lucide-react";

// Import data
import itemsData from "../data/arc_raiders_all_items.json";

// Ensure data is array (in case it's wrapped or empty)
const items = Array.isArray(itemsData) ? itemsData : [];
---

<Layout title="ARC Raiders Database">
    <main class="min-h-screen relative overflow-hidden">
        {/* Compact Navbar */}
        <header
            class="flex items-center justify-between px-6 py-4 bg-arc-dark/50 backdrop-blur-sm border-b border-white/5 sticky top-0 z-50"
        >
            <div class="flex items-center gap-4">
                <h1
                    class="text-2xl font-black tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400 font-sans"
                >
                    ARC RAIDERS
                </h1>
                <div
                    class="hidden md:flex items-center gap-2 px-3 py-1 rounded-full bg-arc-orange/10 border border-arc-orange/20 text-arc-orange text-xs font-mono font-bold tracking-widest"
                >
                    <Sparkles className="w-3 h-3" />
                    MASTER DB
                </div>
            </div>

            <div class="flex items-center gap-3">
                <a
                    href="/workshop"
                    class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/10 transition-all text-xs font-bold text-gray-300 hover:text-white uppercase tracking-wider flex items-center gap-2"
                >
                    <span>üõ†Ô∏è Taller</span>
                </a>
                <a
                    href="/hideout"
                    class="px-4 py-2 rounded-lg bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/10 transition-all text-xs font-bold text-gray-300 hover:text-white uppercase tracking-wider flex items-center gap-2"
                >
                    <span>üè† Escondite</span>
                </a>
            </div>
        </header>

        {/* Gallery */}
        <div
            class="animate-slide-up opacity-0"
            style={{ animationDelay: "0.6s", animationFillMode: "forwards" }}
        >
            <ItemGallery client:load items={items} />
        </div>

        {/* Footer */}
        <footer class="text-center py-12 text-gray-600 font-mono text-xs">
            <p>DATA SOURCED FROM COMMUNITY REPOSITORIES</p>
            <p class="mt-2">BUILT WITH ASTRO & REACT</p>
        </footer>
    </main>
</Layout>
