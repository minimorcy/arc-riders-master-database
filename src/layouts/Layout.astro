---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="ARC Raiders Master Database - Complete Item List"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Outfit:wght@400;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="bg-arc-dark text-white min-h-screen font-sans selection:bg-arc-orange selection:text-white overflow-x-hidden"
    >
        <div
            class="fixed inset-0 z-[-1] bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-arc-card via-arc-dark to-black opacity-80 pointer-events-none"
        >
        </div>

        <slot />
    </body>
</html>
